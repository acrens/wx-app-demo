.personal__header {
    margin-top: 20px;
}

.personal__list {
    background-color: #ffffff;
	border-top: #e5e5e5 1px solid;
    border-bottom: #e5e5e5 1px solid;
    background-image: none!important;
}

.personal__items {
    position: relative;
    display: -webkit-box;
	margin-left: 15px;
	background-repeat: repeat-x;
	background-position: left top;
}

.personal--left {
    margin: 10px 10px 10px 0;
	width: 50px;
    height: 50px;
    background-image: none;
    -webkit-border-radius: 4px;
    position: relative;
    overflow: hidden;
    display: block;
}

.personal__img {
    width: 100%;
    height: 100%;
    border: 0;
}

.personal--right {
    padding-right: 15px;
	-webkit-box-flex: 1;
    box-flex: 1;
    display: box;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-box-pack: center;
}

.personal--c777 {
	color: #777;
	font-size: 13px;
    line-height: 22px;
}

.personal__item {
    position: relative;
    display: -webkit-box;
	margin-left: 15px;
	background-repeat: repeat-x;
	background-position: left top;
}

.personal__item::before {
    content: '';
	position: absolute;
	width: 200%;
	height: 1px;
	bottom: 0;
	border-bottom: 1px solid #e5e5e5;
	-webkit-transform-origin: 0 0;
	transform-origin: 0 0;
	-webkit-transform: scale(.5,.5);
	transform: scale(.5,.5);
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
}

.br-b0.personal__item::before {
	border-bottom: 0px!important;
}

.personal__item::after {
	background: url(https://assets.dxycdn.com/app/DXYClinic/wechat/img/icon.png) no-repeat 0 -75px;
    -webkit-background-size: 150px auto;
    content: "";
    display: block;
    width: 9px;
    height: 15px;
    position: absolute;
    right: 15px;
    top: 50%;
    margin-top: -7px;
}

.personal__item text {
    line-height: 35px;
    font-size: 14px;
}

.personal__btn {
    font-size: 12px;
    position: absolute;
    right: 15px;
    width: 70 px;
    margin: 0;
    padding: 4px 6px;
    line-height: 18px;
    background-color: #fff;
    top: 22px;
    border: 1px solid #1AAD16;
    color: #1AAD16;
    border-radius: 3px;
    background-image:none;
}