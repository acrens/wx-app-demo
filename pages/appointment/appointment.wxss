.info__tab {
	width: 100%;
    overflow: hidden;
}

.tab--left {
	background-repeat: repeat-x;
    -webkit-background-size: 100% 1px;
    background-position: left bottom;
    background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0.5,transparent),color-stop(0.5,#ccc),to(#ccc));
    border-bottom: 0;
    position: fixed;
    left: 0;
    right: 0;
    width: 100%;
    text-align: center;
    height: 48px;
    z-index: 9999;
    background-color: #fafafa;
}

.tab__items {
	top: 0;
    display: block;
    margin: 10px 15px;
    background-image: none!important;
    background-color: transparent!important;
    position: relative;
    width: auto;
    height: 28px;
    left: 0;
    z-index: 10;
    font-size: 16px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

.tab__item {
	color: #25cb83;
    background: #fff;
    display: inline-block;
    margin: 0 auto;
    width: 50%;
    padding: 8px 0;
    border-width: 1px 0 1px 1px;
    position: relative;
    float: left;
    border: 1px solid #25cb83;
    font-size: 13px;
    line-height: 10px;
    text-align: center;
    -webkit-appearance: none;
    text-decoration: none;
    height: auto;
    -webkit-box-sizing: border-box;
    min-width: 70px;
    box-flex: 1;
    -webkit-box-flex: 1;
}

.tab__item.active {
	color: #fff;
    background: #25cb83;
    border-bottom: 1px solid #25cb83;
    font-weight: 500;
}

.tab--right {
    display: -webkit-box;
	margin-top: 60px;
	width: 200%;
    transition-property: transform;
    transition-timing-function: cubic-bezier(0.1, 0.57, 0.1, 1);
    transition-duration: 300ms;
    transform: translate(0px, 0px) translateZ(0px);
    background-color:#fafafa;
}

.tab__content {
	-webkit-box-flex: 1;
    width: 100%;
}

.form {
	display: block;
	width: 100%;
}

.form__info {
	border-top: #e5e5e5 1px solid;
    border-bottom: #e5e5e5 1px solid;
    background-image: none!important;
    background-color: #fff;
    background: -webkit-gradient(linear,left bottom,left top,color-stop(0.5,transparent),color-stop(0.5,#e0e0e0),to(#e0e0e0)) left top repeat-x,-webkit-gradient(linear,left top,left bottom,color-stop(0.5,transparent),color-stop(0.5,#e0e0e0),to(#e0e0e0)) left bottom repeat-x;
}

.form__info--row {
	position: relative;
	margin-bottom: 0;
	height: 46px;
    line-height: 46px;
    padding-left: 0;
    margin-left: 15px;
    padding-right: 0!important;
    font-size: 16px;
    vertical-align: middle;
    background-repeat: repeat-x;
    background-position: left bottom;
}

.form__info--row::before {
	content: '';
	position: absolute;
	width: 200%;
	height: 1px;
	bottom: 0;
	border-bottom: 1px solid #e5e5e5;
	-webkit-transform-origin: 0 0;
	transform-origin: 0 0;
	-webkit-transform: scale(.5,.5);
	transform: scale(.5,.5);
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
}

.br-b0.form__info--row::before {
	border-bottom: 0px!important;
}

.form__info--row label {
	position: absolute;
    text-align: left;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
	width: 35px!important;
    color: #888;
    height: 45.5px;
    line-height: 45.5px;
}

.form__info--row input {
	padding-left: 35px;
    height: 46px;
    width: 100%;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    font-family: inherit;
    font-size: inherit;
    font-weight: inherit;
    border: 0;
    background: 0 0;
    -webkit-appearance: none;
    outline: 0;
}

.form__icon {
	display: inline-block;
    width: 16px;
    height: 16px;
    background-size: 16px;
    vertical-align: text-bottom;
}

