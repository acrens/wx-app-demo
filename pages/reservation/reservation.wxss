.info__tab {
	width: 100%;
    overflow: hidden;
}

.tab--left {
	background-repeat: repeat-x;
    -webkit-background-size: 100% 1px;
    background-position: left bottom;
    background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0.5,transparent),color-stop(0.5,#ccc),to(#ccc));
    border-bottom: 0;
    position: fixed;
    left: 0;
    right: 0;
    width: 100%;
    text-align: center;
    height: 48px;
    z-index: 9999;
    background-color: #fafafa;
}

.tab__items {
	top: 0;
    display: block;
    margin: 10px 15px;
    background-image: none!important;
    background-color: transparent!important;
    position: relative;
    width: auto;
    height: 28px;
    left: 0;
    z-index: 10;
    font-size: 16px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

.tab__item {
	color: #25cb83;
    background: #fff;
    display: inline-block;
    margin: 0 auto;
    width: 50%;
    padding: 8px 0;
    border-width: 1px 0 1px 1px;
    position: relative;
    float: left;
    border: 1px solid #25cb83;
    font-size: 13px;
    line-height: 10px;
    text-align: center;
    -webkit-appearance: none;
    text-decoration: none;
    height: auto;
    -webkit-box-sizing: border-box;
    min-width: 70px;
    box-flex: 1;
    -webkit-box-flex: 1;
}

.tab__item.active {
	color: #fff;
    background: #25cb83;
    border-bottom: 1px solid #25cb83;
    font-weight: 500;
}

.tab--right {
    display: -webkit-box;
	margin-top: 60px;
	width: 200%;
    transition-property: transform;
    transition-timing-function: cubic-bezier(0.1, 0.57, 0.1, 1);
    transition-duration: 300ms;
    transform: translate(0px, 0px) translateZ(0px);
    background-color:#fafafa;
}

.tab__content {
	-webkit-box-flex: 1;
    width: 100%;
}

.reservation__list {
    -webkit-box-flex: 1;
    width: 100%;
    height: auto;
    margin-top: 60px;
}

.reservation__item {
    background-color: #fff!important;
    margin-bottom: 10px;
    border-top: #e5e5e5 1px solid;
    border-bottom: #e5e5e5 1px solid;
    background-image: none!important;
    background: -webkit-gradient(linear,left bottom,left top,color-stop(0.5,transparent),color-stop(0.5,#e0e0e0),to(#e0e0e0)) left top repeat-x,-webkit-gradient(linear,left top,left bottom,color-stop(0.5,transparent),color-stop(0.5,#e0e0e0),to(#e0e0e0)) left bottom repeat-x;
}

.reservation__box {
    border: 0;
    background-image: none;
    margin-left: 15px;
    line-height: 20px;
    padding: 12px 25px 12px 0;
    font-size: 16px;
    position: relative;
    display: -webkit-box;
}

.reservation__content {
    padding-right: 60px;
    -webkit-box-flex: 1;
    display: box;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-box-pack: center;
}

.reservation__detail {
    font-size: 13px;
    line-height: 22px;
    color: #777;
    max-width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.reservation__detail.h4 {
    font-size: 16px;
    line-height: 24px;
}

.reservation__detail label {
    display: inline-block;
    width: 70px;
}